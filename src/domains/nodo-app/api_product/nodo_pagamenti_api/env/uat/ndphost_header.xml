<choose>
  <when condition="@(context.Variables.GetValueOrDefault<bool>("is_perf_env", false))">
    <set-header name="ndphost" exists-action="override">
      <value>nodo-p-prf.nexigroup.com</value>
    </set-header>
  </when>
  <otherwise>
    <set-header name="ndphost" exists-action="override">
      <value>nodo-p-uat.nexigroup.com</value>
    </set-header>
  </otherwise>
</choose>
