{
    "name": "afm_gec_cdc_dataflow",
    "type": "ExecuteDataFlow",
    "dependsOn": [],
    "policy": {
        "timeout": "0.12:00:00",
        "retry": 0,
        "retryIntervalInSeconds": 30,
        "secureOutput": false,
        "secureInput": false
    },
    "userProperties": [],
    "typeProperties": {
        "dataflow": {
            "referenceName": "PDND_CDC_GEC_PAYMENTTYPES_DataFlow",
            "type": "DataFlowReference"
        },
        "compute": {
            "coreCount": 8,
            "computeType": "General"
        },
        "traceLevel": "Fine"
    }
},
{
    "name": "readFileFromStorage",
    "type": "Lookup",
    "dependsOn": [
        {
            "activity": "afm_gec_cdc_dataflow",
            "dependencyConditions": [
                "Succeeded"
            ]
        }
    ],
    "policy": {
        "timeout": "0.12:00:00",
        "retry": 0,
        "retryIntervalInSeconds": 30,
        "secureOutput": false,
        "secureInput": false
    },
    "userProperties": [],
    "typeProperties": {
        "source": {
            "type": "JsonSource",
            "storeSettings": {
                "type": "AzureBlobStorageReadSettings",
                "recursive": true,
                "wildcardFolderPath": "paymenttypes",
                "wildcardFileName": "*.json",
                "enablePartitionDiscovery": false
            },
            "formatSettings": {
                "type": "JsonReadSettings"
            }
        },
        "dataset": {
            "referenceName": "${inputdataset}",
            "type": "DatasetReference"
        },
        "firstRowOnly": false
    }
},
{
    "name": "cycleOverJsonArray",
    "type": "ForEach",
    "dependsOn": [
        {
            "activity": "readFileFromStorage",
            "dependencyConditions": [
                "Succeeded"
            ]
        }
    ],
    "userProperties": [],
    "typeProperties": {
        "items": {
            "value": "@json(string(activity('readFileFromStorage').output.value))",
            "type": "Expression"
        },
        "isSequential": true,
        "activities": [
            {
                "name": "check delete events",
                "type": "IfCondition",
                "dependsOn": [],
                "userProperties": [],
                "typeProperties": {
                    "expression": {
                        "value": "@if(contains(item(), 'name'), true, false)",
                        "type": "Expression"
                    },
                    "ifTrueActivities": [
                        {
                            "name": "WriteEvhub",
                            "type": "WebActivity",
                            "dependsOn": [],
                            "policy": {
                                "timeout": "0.12:00:00",
                                "retry": 0,
                                "retryIntervalInSeconds": 30,
                                "secureOutput": false,
                                "secureInput": false
                            },
                            "userProperties": [],
                            "typeProperties": {
                                "method": "POST",
                    "url": {
                        "value": "@concat('${evh_base_url}', '/gec-ingestion-paymenttypes-dl/messages')",
                        "type": "Expression"
                    },
                                "connectVia": {
                                    "referenceName": "AutoResolveIntegrationRuntime",
                                    "type": "IntegrationRuntimeReference"
                                },
                                "body": {
                                    "value": "@item()",
                                    "type": "Expression"
                                },
                                "authentication": {
                                    "type": "MSI",
                                    "resource": "${evh_base_url}"
                                }
                            }
                        }
                    ]
                }
            }
        ]
    }
},
{
    "name": "deleteElaboratedFile",
    "type": "Delete",
    "dependsOn": [
        {
            "activity": "cycleOverJsonArray",
            "dependencyConditions": [
                "Succeeded"
            ]
        }
    ],
    "policy": {
        "timeout": "0.12:00:00",
        "retry": 0,
        "retryIntervalInSeconds": 30,
        "secureOutput": false,
        "secureInput": false
    },
    "userProperties": [],
    "typeProperties": {
        "dataset": {
            "referenceName": "${inputdataset}",
            "type": "DatasetReference"
        },
        "enableLogging": false,
        "storeSettings": {
            "type": "AzureBlobStorageReadSettings",
            "recursive": true,
            "wildcardFileName": "*.json",
            "enablePartitionDiscovery": false
        }
    }
}